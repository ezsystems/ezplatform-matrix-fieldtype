{
    "name": "ibexa/fieldtype-matrix",
    "description": "Repository dedicated to Matrix Field Type for eZ Platform",
    "type": "library",
    "license": "GPL-2.0-only",
    "replace": {
        "ezsystems/ezplatform-matrix-fieldtype": "*"
    },
    "autoload": {
        "psr-4": {
            "EzSystems\\EzPlatformMatrixFieldtypeBundle\\": "src/bundle/",
            "EzSystems\\EzPlatformMatrixFieldtype\\": "src/lib/",
            "Ibexa\\FieldTypeMatrix\\": "src/lib/",
            "Ibexa\\Bundle\\FieldTypeMatrix\\": "src/bundle/",
            "Ibexa\\Contracts\\FieldTypeMatrix\\": "src/contracts/",
            "Ibexa\\Tests\\FieldTypeMatrix\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EzSystems\\EzPlatformMatrixFieldtype\\Integration\\Tests\\": "tests/integration/"
        }
    },
    "require": {
        "php": "^7.3",
        "ext-libxml": "*",
        "ext-simplexml": "*",
        "ezsystems/ezplatform-kernel": "^4.0@dev",
        "ezsystems/ezplatform-content-forms": "^4.0@dev",
        "ezsystems/ezplatform-graphql": "^4.0@dev",
        "symfony/http-kernel": "^5.0",
        "symfony/console": "^5.0",
        "symfony/config": "^5.0",
        "symfony/dependency-injection": "^5.0",
        "symfony/yaml": "^5.0",
        "symfony/form": "^5.0",
        "symfony/options-resolver": "^5.0"
    },
    "require-dev": {
        "ibexa/ci-scripts": "^0.2@dev",
        "ezsystems/doctrine-dbal-schema": "^4.0@dev",
        "ezsystems/ezplatform-admin-ui": "^4.0@dev",
        "ezsystems/ezplatform-user": "^4.0@dev",
        "ezsystems/ezplatform-richtext": "^4.0@dev",
        "ezsystems/ezplatform-search": "^4.0@dev",
        "ezsystems/ezplatform-rest": "^4.0@dev",
        "ezsystems/ezplatform-http-cache": "^4.0@dev",
        "ezsystems/ezplatform-design-engine": "^4.0@dev",
        "ezsystems/ezplatform-code-style": "^1.0",
        "friendsofphp/php-cs-fixer": "^2.16.0",
        "phpunit/phpunit": "^6.4"
    },
    "scripts": {
        "fix-cs": "php-cs-fixer fix --config=.php-cs-fixer.php --show-progress=dots",
        "check-cs": "@fix-cs --dry-run",
        "test": "phpunit -c phpunit-integration-legacy.xml"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "4.0.x-dev"
        }
    }
}
